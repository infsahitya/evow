generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique @default(uuid())

  firstName String
  lastName  String?

  password String?

  tokens       Token?
  contact      Contact?
  address      Address?
  profilePhoto Attachment? @relation("UserProfilePicture")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Token {
  id String @id @unique @default(uuid())

  access  String @unique
  refresh String @unique

  googleOAuthAccess  String @unique
  googleOAuthRefresh String @unique

  user   User   @relation(fields: [userID], references: [id])
  userID String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tokens")
}

model Contact {
  id String @id @unique @default(uuid())

  email    String
  phone    String?
  whatsapp String

  user   User   @relation(fields: [userID], references: [id])
  userID String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact")
}

model Address {
  id String @id @unique @default(uuid())

  city    String
  state   String
  country String

  user   User   @relation(fields: [userID], references: [id])
  userID String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("addresses")
}

model Attachment {
  id String @id @unique @default(uuid())

  originalName String @db.VarChar(255)
  name         String @db.VarChar(255)
  size         Int
  type         String @db.VarChar(100)
  uri          String

  user   User   @relation("UserProfilePicture", fields: [userID], references: [id])
  userID String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("attachments")
}
